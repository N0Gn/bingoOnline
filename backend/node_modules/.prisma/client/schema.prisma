generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoomStatus {
  WAITING
  RUNNING
  FINISHED
}

model User {
  id        String   @id @default(cuid())
  nickname  String
  createdAt DateTime @default(now())

  players RoomPlayer[]
  cards   Card[]
}

model Room {
  id        String     @id @default(cuid())
  code      String     @unique
  name      String
  status    RoomStatus @default(WAITING)
  createdAt DateTime   @default(now())

  players RoomPlayer[]
  draws   Draw[]
  cards   Card[]
  winner  Winner?
}

model RoomPlayer {
  id       String   @id @default(cuid())
  roomId   String
  userId   String
  joinedAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
}

model Card {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  createdAt DateTime @default(now())

  room  Room       @relation(fields: [roomId], references: [id])
  user  User       @relation(fields: [userId], references: [id])
  cells CardCell[]
}

model CardCell {
  id       String  @id @default(cuid())
  cardId   String
  position Int
  value    Int
  marked   Boolean @default(false)

  card Card @relation(fields: [cardId], references: [id])

  @@unique([cardId, position])
}

model Draw {
  id      String   @id @default(cuid())
  roomId  String
  number  Int
  drawnAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id])

  @@unique([roomId, number])
}

model Winner {
  id        String   @id @default(cuid())
  roomId    String   @unique
  userId    String
  pattern   String
  createdAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id])
}
